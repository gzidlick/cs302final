{
	"name": "Password Manager",
	"version": "0.1",
	"description": "Welp. It's a password manager.",
	"permissions": [
        "storage", 
        "declarativeContent", 
        "<all_urls>", 
        "activeTab"
    ],
	"background": {
		"page": "background/background.html",
		"persistent": false
	},
	"content_scripts":[{
		"matches": ["<all_urls>"],
		"all_frames": true,
		"js": [
			"content/parser.js",
			"content/encryption.js",
			"content/content.js"
		],
		"run_at": "document_end"
		}
	],
	"browser_action":{
		"default_title": "Password Manager",
		"default_popup": "popup/popup.html"
	},
	"options_page": "options/options.html",
	"manifest_version": 2
}
